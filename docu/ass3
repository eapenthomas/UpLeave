def decimal_to_binary_octal(decimal_number):
    binary_representation = "{0:b}".format(decimal_number)
    octal_representation = "{0:o}".format(decimal_number)

    return binary_representation, octal_representation

# Get user input for decimal number
decimal_number = int(input("Enter a decimal number: "))

# Convert and display the binary and octal representations
binary, octal = decimal_to_binary_octal(decimal_number)
print(f"Binary representation: {binary}")
print(f"Octal representation: {octal}")
